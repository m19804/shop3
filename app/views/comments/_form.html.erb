<%= simple_form_for(@comment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :item_id, as: :hidden %>
    <%= f.input :name %>
    <%= f.input :message %>
    <%= f.input :rating, collection: [5,4,3,2,1], as: :radio_buttons %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
